pipeline {
  agent {label 'master'}

  options {
    buildDiscarder(logRotator(numToKeepStr: '60', artifactNumToKeepStr: '5'))
  }

  tools { 
      maven '3.6' 
      jdk '11' 
  }

  stages {
    stage('build') {
      steps {
        script {
          bat "mvn clean install -f atrust-connector/pom.xml"
          bat "mvn clean install -f atrust-connector-demo/pom.xml"
          bat "mvn clean verify -f atrust-connector-test/pom.xml"

          archiveArtifacts artifacts: "*/target/*.iar", allowEmptyArchive: true
          junit allowEmptyResults: true, testResults: '**/surefire-reports/TEST-*.xml'
        }
      }
    }
  }
}
